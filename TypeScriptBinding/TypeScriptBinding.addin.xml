<Addin  id            = "TypeScriptBinding"  
        namespace     = "MonoDevelop"  
        name          = "TypeScript Language Binding"  
        author        = "Atsushi Enomoto"  
        copyright     = "MIT X11"
        description   = "TypeScript Language Binding"  
        category      = "Language bindings"  
        version       = "0.1.0" >
	
	
	<!-- Dependencies -->
	
	<Dependencies>
		<Addin id="Core" version="3.0" />
		<Addin id="Ide" version="3.0" />
		<Addin id="SourceEditor2" version="3.0" />
	</Dependencies>
	
	
	
	<!-- Icons -->
	
	<Extension path="/MonoDevelop/Core/StockIcons">
		<StockIcon stockid="fd-icon" resource="typescript-icon-16.png" size="Menu" />
		<StockIcon stockid="fd-icon" resource="typescript-icon-24.png" size="Dnd" />
		<StockIcon stockid="fd-icon" resource="typescript-icon-32.png" size="Dialog" />
		<!-- FIXME: create overlay icon -->
		<StockIcon stockid="fd-project" icon="md-project|res:typescript-icon-16.png" size="Menu" />
		<StockIcon stockid="fd-project" icon="md-project|res:typescript-icon-32.png" size="Dnd" />
		<StockIcon stockid="fd-project" icon="md-project|res:typescript-icon-32.png" size="Dialog" />
		<StockIcon stockid="fd-file" icon="md-text-file-icon|res:typescript-icon-16.png" size="Menu" />
		<StockIcon stockid="fd-file" icon="md-text-file-icon|res:typescript-icon-32.png" size="Dnd" />
		<StockIcon stockid="fd-file" icon="md-text-file-icon|res:typescript-icon-32.png" size="Dialog" />
	</Extension>
	
	
	
	<!-- Syntax Modes -->
	
	<Extension path="/MonoDevelop/SourceEditor2/SyntaxModes">
		<Templates resource="TypeScriptSyntaxMode.xml" />
	</Extension>
	
	<!--
	<Extension path="/MonoDevelop/SourceEditor2/Styles">
		<Templates resource="FlashDevelopStyle.xml" />
	</Extension>
	-->
	
	
	
	<!-- Templates -->
	
	<Extension path="/MonoDevelop/Ide/FileTemplates">
		<FileTemplate id="EmptyTypeScriptSourceFile" resource="EmptyTypeScriptSourceFile.xft.xml" />
	</Extension>
	
	<Extension path="/MonoDevelop/Ide/ProjectTemplates">
		<ProjectTemplate id="EmptyTypeScriptJSProject" resource="EmptyTypeScriptJSProject.xpt.xml" />
	</Extension>
	
	
	
	<!-- File Types -->
	
	<Extension path="/MonoDevelop/Core/MimeTypes">
		<MimeType id="text/x-typescript" _description="TypeScript source code" icon="fd-file" isText="true"><File pattern="*.ts" /></MimeType>
	</Extension>
	
	<Extension path="/MonoDevelop/Ide/FileFilters">
		<FileFilter id="TypeScript" insertbefore="AllFiles" _label="TypeScript Files" extensions="*.ts" />
	</Extension>
	
	
	
	<!-- Languages -->
	
	<Extension path="/MonoDevelop/ProjectModel/LanguageBindings">
		<LanguageBinding id="TypeScript" supportedextensions=".ts" class="MonoDevelop.TypeScriptBinding.Languages.TypeScriptLanguageBinding" />
	</Extension>
	
	<Extension path="/MonoDevelop/Ide/GlobalOptionsDialog/Other">
		<Section id="TypeScriptBindingOptions" _label="TypeScript" icon="ts-icon" class="MonoDevelop.TypeScriptBinding.Languages.Gui.TypeScriptOptionsPanel" />
	</Extension>
	
	
	
	<!-- Projects -->
	
	<Extension path="/MonoDevelop/ProjectModel/ProjectBindings">
		<ProjectBinding id="TypeScriptProject" class="MonoDevelop.TypeScriptBinding.Projects.TypeScriptProjectBinding" />
	</Extension>
	
	<Extension path="/MonoDevelop/ProjectModel/Gui/ItemOptionPanels/Build">
		<Condition id="ItemType" value="MonoDevelop.TypeScriptBinding.Projects.TypeScriptProject">
			<Section id="TypeScriptProjectOptionsPanel" _label="TypeScript" icon="ts-icon" class="MonoDevelop.TypeScriptBinding.Projects.Gui.TypeScriptProjectOptionsPanel" />
		</Condition>
	</Extension>
	
	<Extension path="/MonoDevelop/ProjectModel/SerializableClasses">
		<DataType class="MonoDevelop.TypeScriptBinding.Projects.TypeScriptProject" />
		<DataType class="MonoDevelop.TypeScriptBinding.Projects.TypeScriptProjectConfiguration" />
	</Extension>
	
	<Extension path="/MonoDevelop/ProjectModel/MSBuildItemTypes">
		<SolutionItem type="MonoDevelop.TypeScriptBinding.Projects.TypeScriptProject" extension="tsproj" guid="{73443E56-3503-11DE-B03D-001DBA02A2FC}"/>
	</Extension>
	
	
	
	<!-- Code Completion -->
	
	<Extension path="/MonoDevelop/Ide/TextEditorExtensions">
		<Class fileExtensions=".ts" class="MonoDevelop.TypeScriptBinding.Languages.Gui.TypeScriptTextEditorCompletion" />
	</Extension>
	
	
</Addin>
